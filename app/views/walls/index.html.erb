<h1>Listing walls</h1>

<table>
  <thead>
    <tr>
      <th>Graffiti</th>
      <th>Description</th>
      <th>Background type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<%= link_to 'Create New Wall', new_wall_path %>

  <tbody>
    <% @walls.each do |wall| %>
      <tr>
        <td><%= wall.name %></td>
        <td><%= wall.description %></td>
        <td><%= wall.background %></td>
        <td><%= link_to 'Show', wall %></td>
        <td><%= link_to 'Edit', edit_wall_path(wall) %></td>
        <td><%= link_to 'Destroy', wall, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


